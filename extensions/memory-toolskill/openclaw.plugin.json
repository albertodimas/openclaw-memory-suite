{
  "id": "memory-toolskill",
  "uiHints": {
    "dbPath": {
      "label": "Database Path",
      "placeholder": "~/.openclaw/memory/toolskill",
      "advanced": true
    },
    "alwaysRecall": {
      "label": "Always Recall",
      "help": "Always inject tool/skill summary even if prompt does not mention tools"
    },
    "recallLimit": {
      "label": "Recall Limit",
      "help": "Max patterns per tool to inject"
    },
    "minTotal": {
      "label": "Min Observations",
      "help": "Minimum observations before showing a tool"
    },
    "minSuccessRate": {
      "label": "Min Success Rate",
      "help": "Minimum success rate before showing a tool"
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean" },
      "dbPath": { "type": "string" },
      "alwaysRecall": { "type": "boolean" },
      "recallLimit": { "type": "integer", "minimum": 1, "maximum": 10 },
      "minTotal": { "type": "integer", "minimum": 1, "maximum": 100 },
      "minSuccessRate": { "type": "number", "minimum": 0, "maximum": 1 },
      "maxExamples": { "type": "integer", "minimum": 1, "maximum": 10 },
      "maxChars": { "type": "integer", "minimum": 200, "maximum": 4000 },
      "redaction": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "enabled": { "type": "boolean" }
        }
      }
    }
  }
}
